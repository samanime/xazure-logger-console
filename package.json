{
  "name": "xazure-logger-console",
  "version": "0.1.0",
  "description": "A logging module for Xazure Logger which logs with console.",
  "main": "dist/main",
  "module": "dist/module",
  "jsnext:main": "dist/module",
  "author": "Christian Snodgrass <christian.snodgrass.open@gmail.com> (http://xazure.net)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samanime/xazure-logger-console.git"
  },
  "bugs": {
    "url": "https://github.com/samanime/xazure-logger-console/issues"
  },
  "scripts": {
    "start": "npm run clean & nodemon --exec \"npm run build\"",
    "prepare": "npm run clean & npm run build",
    "postpublish": "git push & git push --tags",
    "build": "npm run build:main & npm run build:module",
    "build:main": "babel src -d dist/main -s",
    "build:module": "cross-env NODE_ENV=module babel src -d dist/module -s",
    "clean": "rimraf -rf dist || exit 0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.3",
    "nodemon": "^1.14.10",
    "rimraf": "^2.6.2"
  },
  "xazure": "logger"
}
